          app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_scrollFlags="scroll|enterAlways"
